{
  "name": "project-generator-npm-scripts",
  "version": "0.0.1",
  "description": "",
  "config": {
    "proxy": "project-starter.app",

    "styles": "app/assets/styles/*",
    "scripts": "app/assets/scripts/*",
    "images": "app/assets/images/*",

    "app": "app/",
    "appDirImages": "app/assets/images/",
    "appDirIcons": "app/assets/images/icons/",
    "appAllStyles": "app/assets/styles/**/*.css",
    "appAllScripts": "app/assets/scripts/**/*.js",
    "appAllImages": "app/assets/images/**/*",
    "appStylesFile": "app/assets/styles/styles.css",

    "dist": "dist/",
    "distDirScripts": "dist/assets/scripts/",
    "distDirImages": "dist/assets/images/",
    "distDirStyles": "dist/assets/styles/*",
    "distAllStyles": "dist/assets/styles/",
    "distAllScripts": "dist/assets/scripts/app.js",
    "distAllImages": "dist/assets/images/",
    "distIcons": "dist/assets/images/icon.svg",

    "tmp": "app/_tmp",
    "tmpScripts": "app/_tmp/scripts/",
    "tmpStyles": "app/_tmp/styles/*.css",
    "tmpCSSDir": "app/_tmp/styles",
    "tmpJSMain": "app/_tmp/scripts/app.js",
    "tmpJSVendor": "app/_tmp/scripts/vendor.js",

    "templates": "app/**/*.html"
  },
  "scripts": {
    "clean": "rm -rf $npm_package_config_dist",
    "autoprefixer": "postcss -u autoprefixer -r $npm_package_config_distDirStyles",
    "styles": "postcss -u postcss-import -u postcss-simple-vars -u postcss-nested -u postcss-mixins -u postcss-hexrgba -u postcss-color-function -c postcssConfig.json -d $npm_package_config_distAllStyles $npm_package_config_appStylesFile",
    "browserify": "mkdir -p $npm_package_config_distDirScripts && browserify $npm_package_config_appAllScripts -o $npm_package_config_distAllScripts -t [babelify --presets[es2015]]",
    "imagemin": "imagemin $npm_package_config_appDirImages $npm_package_config_distDirImages -p",
    "icons": "svgo -f $npm_package_config_appDirIcons && mkdir -p $npm_package_config_distDirImages && svg-sprite-generate -d $npm_package_config_appDirIcons -o $npm_package_config_distIcons",
    "serve": "browser-sync start --proxy $npm_package_config_proxy --files $npm_package_config_appAllStyles, $npm_package_config_appAllScripts, $npm_package_config_templates, !.git/*, !package.json, !dist/*",

    "build:styles": "npm run styles && npm run autoprefixer",
    "build:scripts": "npm run browserify",
    "build:images": "npm run imagemin && npm run icons",
    "build:all": "npm run build:styles && npm run build:scripts && npm run build:images",

    "tmp:styles": "",
    "tmp:scripts": "",
    "tmp:images": "",
    "tmp:all": "",

    "watch:styles": "onchange 'app/assets/styles/**/*.css' -- npm run build:styles",
    "watch:scripts": "onchange 'app/assets/scripts/**/*.js' -- npm run build:scripts",
    "watch:all": "npm-run-all -p serve watch:styles watch:scripts",
    "postinstall": "npm run build:all && npm run watch:all"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.3.1",
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.11.1",
    "browserify": "^13.0.1",
    "imagemin-cli": "^2.1.0",
    "npm-run-all": "^1.5.1",
    "onchange": "^2.0.0",
    "postcss-cli": "^2.4.0",
    "postcss-color-function": "^2.0.0",
    "postcss-hexrgba": "^0.2.0",
    "postcss-import": "^7.1.3",
    "postcss-mixins": "^2.1.1",
    "postcss-nested": "^1.0.0",
    "postcss-simple-vars": "^1.1.0",
    "svg-injector": "^1.1.3",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^0.6.1"
  }
}
