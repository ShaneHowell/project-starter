{
  "name": "project-generator",
  "version": "2.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "modernizr": "./node_modules/.bin/customizr -c ./tasks/modernizr.json",
    "cleanAssets": "rm -rf ./app/assets/_compiled",
    "scripts": "./node_modules/.bin/webpack",
    "scripts:watch": "npm run scripts -- -w",
    "scripts:prod": "NODE_ENV=production npm run scripts -- -p",
    "styles": "postcss -c ./tasks/postcss.js",
    "styles:watch": "npm run styles -- -w",
    "styles:prod": "npm run styles && ./node_modules/.bin/cleancss -o ./app/assets/_compiled/styles.css ./app/assets/_compiled/styles.css --safe",
    "sprite:clean": "rm -rf ./_sprite",
    "sprite:build": "./node_modules/.bin/svg-sprite --config ./tasks/sprite.json ./app/assets/images/icons/*.svg",
    "sprite:move": "parallelshell 'mv ./_sprite/_sprite.css ./app/assets/styles/base/_sprite.css' 'mv ./_sprite/sprite.svg ./app/assets/images/sprites/sprite.svg'",
    "sprite": "npm run sprite:clean && npm run sprite:build && npm run sprite:move && npm run sprite:clean",
    "browsersync": "browser-sync start --config ./tasks/browsersync.js",
    "watch": "npm run cleanAssets && parallelshell 'npm run modernizr' 'npm run styles:watch' 'npm run scripts:watch' 'npm run browsersync'",
    "clean": "rm -rf ./dist/",
    "copy": "cp -r ./app/ ./dist/",
    "versionAssets": "node ./tasks/versionSprite.js && node ./tasks/versionAssets.js",
    "cleanUp": "rm -rf ./dist/assets/scripts && rm -rf ./dist/assets/styles",
    "start:pre": "parallelshell 'npm run scripts:prod' 'npm run styles:prod' 'npm run sprite' 'npm run clean'",
    "start:post": "parallelshell 'npm run versionAssets' 'npm run cleanUp'",
    "start": "npm run cleanAssets && npm run modernizr && npm run start:pre && npm run copy && npm run start:post"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "6.4.1",
    "babel-core": "6.16.0",
    "babel-loader": "6.2.5",
    "babel-preset-es2015": "6.16.0",
    "browser-sync": "2.16.0",
    "clean-css": "3.4.19",
    "cssnano-cli": "1.0.4",
    "customizr": "1.0.0-alpha",
    "eslint": "3.5.0",
    "globby": "6.0.0",
    "node-version-assets": "1.2.0",
    "parallelshell": "2.0.0",
    "postcss-cli": "2.6.0",
    "postcss-color-function": "2.0.1",
    "postcss-hexrgba": "0.2.0",
    "postcss-import": "7.1.3",
    "postcss-mixins": "5.2.0",
    "postcss-nested": "1.0.0",
    "postcss-simple-vars": "3.0.0",
    "stylelint": "7.2.0",
    "stylelint-bem-no-element-nesting": "1.0.3",
    "stylelint-em-media-query": "1.0.2",
    "stylelint-max-width-query": "1.0.1",
    "svg-sprite": "1.3.6",
    "webpack": "1.13.2"
  },
  "dependencies": {
    "jquery": "3.1.0",
    "normalize.css": "4.2.0",
    "picturefill": "3.0.2",
    "svg-injector": "1.1.3"
  }
}
